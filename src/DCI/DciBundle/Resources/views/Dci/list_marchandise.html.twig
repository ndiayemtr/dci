{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            
            <h4 id="tireGestPiece"> la liste des marchandises du produit</h4><br>

                {% if marchandises == null %}
                    <p>
                    <H3 class = "text-info"> Pas d'attestations disponible !!!</H3>
                        {#{{ include('includeType/no_view.html.twig') }}#}
                    </ p>
                {% endif %}
                {% if marchandises|default is not empty %}

                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th  style="text-align: center">Réference</th>
                                <th  style="text-align: center">Stade</th>
                                <th  style="text-align: center">Categorie</th>
                                <th  style="text-align: center">Sous Categorie</th>
                                <th  style="text-align: center">Type de condionnement</th>
                                <th  style="text-align: center">type de Marchandise</th>
                                <th  style="text-align: center">Nom Marchandise</th>
                                <th  style="text-align: center">Natute du Marcha</th>
                                <th  style="text-align: center">Quantité</th>
                                <th  style="text-align: center">Unité</th>
                                <th  style="text-align: center">Origine</th>
                                <th  style="text-align: center">Producteurs</th>
                                <th  style="text-align: center">Voir les diff. prix</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for marchandises in marchandises %}
                                <tr> 
                                    <td  style="text-align: center"> {{ marchandises.reference }} </td>                
                                    <td  style="text-align: center"> {{ marchandises.stade }} </td>
                                    <td  style="text-align: center"> {{ marchandises.categorie }} </td>
                                    <td  style="text-align: center"> {{ marchandises.sousCategorie }} </td>                
                                    <td  style="text-align: center"> {{ marchandises.typeCondionnement }} </td>
                                    <td  style="text-align: center"> {{ marchandises.typeMarchandise }} </td>
                                    <td  style="text-align: center"> {{ marchandises.nonMarchandise }} </td>                
                                    <td  style="text-align: center"> {{ marchandises.natuteDuMarcha }} </td>
                                    <td  style="text-align: center"> {{ marchandises.quantite }} </td>
                                    <td  style="text-align: center"> {{ marchandises.unite }} </td>                
                                    <td  style="text-align: center"> {{ marchandises.Origine }} </td>
                                    <td  style="text-align: center"> {{ marchandises.Producteur }} </td>
                                    <td  style="text-align: center"> 
                                    <a style="text-decoration: none" href="{{ path('dci_prix', { 'id' : marchandises.id }) }}">
                                        <h4><i class="glyphicon glyphicon-eye-close"></i> </h4>
                                        </a>
                                    </td>
                                </tr>
                            {%endfor%}
                        {%endif%}

                    </tbody>
                </table>
                        
                    <a class="glyphicon glyphicon-plus" style="text-decoration: none; color: blue;" href="{{ path('dci_add_produit') }}">
                        Ajouter un nouveau produit
                         </a>
                </div>
        </div>
                        
    </div>
{% endblock %}