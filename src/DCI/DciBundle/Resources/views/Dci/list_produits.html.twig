{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            
            <h4 id="tireGestPiece"> listProduits</h4><br>

                {% if listProduits == null %}
                    <p>
                    <H3 class = "text-info"> Pas d'attestations disponible !!!</H3>
                        {#{{ include('includeType/no_view.html.twig') }}#}
                    </ p>
                {% endif %}
                {% if listProduits|default is not empty %}

                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th  style="text-align: center">Code</th>
                                <th  style="text-align: center">Libell√©</th>
                                <th  style="text-align: center">Type produit</th>
                                <th  style="text-align: center">Nom produit</th>
                                <th  style="text-align: center">Ajouter Marchandise</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for produit in listProduits %}
                                <tr> 
                                    <td  style="text-align: center"> {{ produit.code }} </td>                
                                    <td  style="text-align: center"> {{ produit.libelle }} </td>
                                    <td  style="text-align: center">
                                        <a style="text-decoration: none" href="{{ path('dci_marchandises_produits', { 'id' : produit.id }) }}">
                                        {{ produit.categorieProduit }} 
                                        </a>
                                        
                                    </td>
                                    <td  style="text-align: center"> {{ produit.nomProduit }} </td>
                                    <td  style="text-align: center"> 
                                    <a style="text-decoration: none" href="{{ path('dci_marchandise', { 'id' : produit.id }) }}">
                                        <h4><i class="glyphicon glyphicon-plus"></i> </h4>
                                        </a>
                                    </td>
                                </tr>
                            {%endfor%}
                        {%endif%}

                    </tbody>
                </table>
                        
                    <a class="glyphicon glyphicon-plus" style="text-decoration: none; color: blue;" href="{{ path('dci_add_produit') }}">
                        Ajouter un nouveau produit
                         </a>
                </div>
        </div>
                        
    </div>
{% endblock %}