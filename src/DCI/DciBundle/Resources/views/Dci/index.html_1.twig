{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-md-6">


            <form class="form-horizontal" action="{{ path('dci_add_produit') }}" method="POST">
                <h2 id="">Ajouter un Produit</h2>

                <div  class="box-body">
                    <div class="form-group">
                        <label for="code" class="col-sm-4 control-label">Code du produit</label>
                        <div class="col-sm-8">
                            <input type="text" name="code" class="form-control" id="code" placeholder="Code du produit">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="libelle" class="col-sm-4 control-label">Libelle</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" name="libelle" id="libelle" placeholder="Description"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Type de produit</label>
                         <div class="col-sm-8">
                        <select class="form-control" id="categorieProduit" name="categorieProduit" placeholder="Choisir Type de produit">
                            <option>Produits végétaux</option>
                            <option>Produits animaux</option>
                            <option>Produits de la mer</option>
                            <option>Produits miniers</option>
                            <option>Produits énergétiques</option>
                            <option>Produits manufacturés</option>
                            <option>Produits d’art & artisanat</option>
                            <option>Produits culturels</option>
                        </select>
                             </div>
                    </div>

                    <div class="form-group" id="cacheNomProduit">
                        <label class="col-sm-4 control-label">Nom du produit</label>
                        <div class="col-sm-8">
                            <select class="form-control" id="nomProduit" name="nomProduit" placeholder="Anycity">
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>


                <div> 
                    <button type="submit" style="" class="btn btn-primary form-control"> Valider </button>
                </div>
            </form>

        </div>

    </div>
</div>
{% endblock %}