{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <h2 class="titrePage">Liste des marchandises du produits : {{ entiteProduit.libelle }}</h2><br>
          <table class="table table-striped table-hover">
                        <thead style="text-align: center">
                            <tr style="text-align: center">
                                <th style="text-align: center">Reference</th>
                                 <th style="text-align: center">Stade</th>
                                 <th style="text-align: center">Origine</th>
                                 <th style="text-align: center">Non Marchandise</th>
                                 <th style="text-align: center">Type Marchandise</th>
                                 <th style="text-align: center">nouveau parametre</th>
                                 <th style="text-align: center">Indicateur de Marchanise</th>
                                 
                            </tr>
                        </thead>
                        <tbody class="cent" style="text-align: center">

                            {% for marchandiseProduit in marchandiseProduits %}
                                <tr> 
                                    <td style="text-align: center"> {{ marchandiseProduit.reference }} </td>                
                                    <td style="text-align: center"> {{ marchandiseProduit.stade }} </td>
                                    <td style="text-align: center"> {{ marchandiseProduit.origine }} </td>
                                    <td style="text-align: center"> {{ marchandiseProduit.nonMarchandise }} </td>
                                     <td style="text-align: center"> {{ marchandiseProduit.typeMarchandise }} </td>
                                    <td style="text-align: center">
                                        <a style="text-decoration: none; color: blue;" href="{{path('utilisateur_attribut_marchandise', { 'id' : marchandiseProduit.id }) }}"><span class="fa fa-plus"> </span></a>                                       
                                    </td>
                                    <td style="text-align: center">
                                        <a style="text-decoration: none; color: blue;" href="{{path('utilisateur_indicateur', { 'id' : marchandiseProduit.id }) }}"><span class="fa fa-plus"> </span></a>                                       
                                    </td>
                              
                                    

                                </tr>
                            {%endfor%}

                    </tbody>
                    </table>
        
    </div>

    <div class="row">
        
        <div class="col-md-12 text-center">                                
            <div> 
                <ul class="pagination">
                    {% for p in range(1, nbrTotalPages) %}
                        <li{% if p == page %} class="active"{% endif %}>
                            <a href="{{ path('utilisateur_produits', {'page': p}) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                </ul>
                
            </div>  
                <P style="text-align: center">
                
                <span class="fa fa-plus"> <a style="text-decoration: none; color: blue;" href="{{path('utilisateur_entite') }}">Nouveau produits</a></span>
                <span>&nbsp;</span>
                <span class="fa fa-reply"> <a style="text-decoration: none; color: blue;" href="{{path('utilisateur_categorie_entite') }}">Annuler et Retour</a></span>
            </P>
        </div>
    </div>
{% endblock %}