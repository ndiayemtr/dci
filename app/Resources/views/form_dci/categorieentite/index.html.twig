{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <p>
        <h2 class="titrePage">Administration des classifications : Produit | Service</h2>
        <a style="text-decoration: none;" href="{{  path('categorieentite_index') }}"><span class="fa fa-arrow-circle-left"></span> Produit-Service</a>
    </p>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">la liste produit ou service</h3>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>code</th>
                <th>Type</th>
                <th>Classes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for categorieEntite in categorieEntites %}
                <tr>
                    <td>{{ categorieEntite.code }}</td>
                    <td>{{ categorieEntite.typeCat }}</td>
                    <td>{{ categorieEntite.nomEntite }}</td>
                    <td>
                        <a style="text-decoration: none; color: #003eff" href="{{ path('categorieentite_show', { 'id': categorieEntite.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Afficher</a>
                        <span>&nbsp;&nbsp;</span> 
                        <a style="text-decoration: none; color: #003eff" href="{{ path('categorieentite_edit', { 'id': categorieEntite.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Modification</a>
                        <span>&nbsp;&nbsp;</span> 
                        <a style="text-decoration: none; color: #003eff" href="{{ path('indicaprodser_add', { 'id': categorieEntite.id }) }}"><span class="glyphicon glyphicon-plus"></span> Affecter un indicateur</a>
                        <span>&nbsp;&nbsp;</span> 
                        <a style="text-decoration: none; color: #003eff" href="{{ path('souscategorieentite_lier', { 'id': categorieEntite.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Voir les Sous Classes (SC)</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<P>
    <a style="text-decoration: none; color: #003eff" href="{{ path('categorieentite_new') }}"><span class="glyphicon glyphicon-plus"></span> Nouvelle categorie d'entit√©</a>
    <span>&nbsp;&nbsp;</span> 
    <a style="text-decoration: none; color: #003eff" href="{{ path('indicaprodser_index') }}"><span class="glyphicon glyphicon-eye-open"></span> Indicateur poroduit|service</a>
</P>

<div class="row"> 
    <ul class="center-block pagination">
        {% for p in range(1, nbrTotalPages) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('categorieentite_index', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>

</div>

{% endblock %}