{% extends "::layout/layout.html.twig" %}

{% block body %}
      <div class="row">
        <p>
            <a style="text-decoration: none;" href="{{  path('indicateur_index') }}"><span class="fa fa-arrow-circle-left"></span> Tous les Indicateurs </a>
        </p>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Liste des Indicateurs</h3>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Reference</th>
                    <th>Libelle</th>
                    <th>Typedata</th>
                    <th>Unite</th>
                    <th>Mode</th>
                    <th>Niveau</th>
                    <th>Periodicite</th>
                    <th>Date indica</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for indicateur in indicateurs %}
                    <tr>
                        <td><a href="{{ path('indicateur_show', { 'id': indicateur.id }) }}">{{ indicateur.id }}</a></td>
                        <td>{{ indicateur.reference }}</td>
                        <td>{{ indicateur.libelle }}</td>
                        <td>{{ indicateur.typeData }}</td>
                        <td>{{ indicateur.unite }}</td>
                        <td>{{ indicateur.mode }}</td>
                        <td>{{ indicateur.niveau }}</td>
                        <td>{{ indicateur.periodicite }}</td>
                        <td>{{ indicateur.dateIndi }}</td>
                        <td>
                            <a style="text-decoration: none; color: #003eff" href="{{ path('indicateur_show', { 'id': indicateur.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Afficher</a>
                            <span>&nbsp;&nbsp;</span> 
                            <a style="text-decoration: none; color: #003eff" href="{{ path('indicateur_edit', { 'id': indicateur.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Modification</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <P>
        <a style="text-decoration: none; color: #003eff" href="{{ path('indicateur_new') }}"><span class="glyphicon glyphicon-plus"></span> Nouveau indicateur</a>
    </P>
    
                <div style="text-align: center"> 
        <ul class="pagination">
            {% for p in range(1, nbrTotalPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('indicateur_index', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}
