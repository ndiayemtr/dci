{% extends "::layout/layout.html.twig" %}

{% block body %}
     <div class="row">
        <p>
            <a style="text-decoration: none;" href="{{  path('relevermarchandise_index') }}"><span class="fa fa-arrow-circle-left"></span> Les relevés lié aux marchandises</a>
            | Modification d'une relevée de marchandise
        </p>
    </div>
    <div class="col-md-offset-3 col-md-7">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Modification d'une relevée de marchandise</h3>
            </div>
            <div class="panel-body">
                {{ form_start(edit_form) }}
                 <div class="form-group">
                    <div class="col-md-3">{{ form_label(edit_form.quantite, "Quantité") }}</div>
                    <div class="col-md-7">
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(edit_form.quantite) }}
                        {# Génération de l'input. #}
                        {{ form_widget(edit_form.quantite, {'attr': {'class': 'form-control', 'placeholder':'exemple 50 KG'}}) }}
                    </div>
                </div><br><br>
                 <div class="form-group">
                    <div class="col-md-3">{{ form_label(edit_form.dateDuRelever, "date relevée") }}</div>
                    <div class="col-md-7">
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(edit_form.dateDuRelever) }}
                        {# Génération de l'input. #}
                        {{ form_widget(edit_form.dateDuRelever, {'attr': {'class': 'form-control periodicite', 'placeholder':'clic pour choisir'}}) }}
                    </div>
                </div><br><br>
                
      
            <input type="submit" value="Valider" class="btn btn-primary btn-group-justified" />
            {{ form_end(edit_form) }}
            <br>
  
            <a style="text-decoration: none; color: #003eff" href='javascript:self.history.back();'><span class="fa fa-arrow-circle-left"></span> Retour</a>   

            </div>
         
        </div>
    </div>
    <br><br><br><br><br><br><br><br><br><br>
{% endblock %}

