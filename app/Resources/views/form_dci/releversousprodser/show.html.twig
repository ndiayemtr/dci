{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <p>
            <a style="text-decoration: none;" href="{{  path('releversousprodser_index') }}"><span class="fa fa-arrow-circle-left"></span> Les relevés liés aux sous categorie</a>
            | Afficher un relevé de sous categorie de produit ou service
        </p>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Relevé de sous categorie de produit</h3>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>#</th>
                    <td>{{ releverSousProdSer.id }}</td>
                </tr>
                <tr>
                    <th>Quantite</th>
                    <td>{{ releverSousProdSer.quantite }}</td>
                </tr>
                <tr>
                    <th>Date du relever</th>
                    <td>{% if releverSousProdSer.dateDuRelever %}{{ releverSousProdSer.dateDuRelever|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                 <tr>
                <th class="titrePage">Entité liée : {{ releverSousProdSer.indicaSousProdSer.sousCateEntite.sousCategorieEntite.nomEntite }}</th>
                <td></td>
            </tr>
            <tr>
                <th>Nom entite</th>
                <td>{{ releverSousProdSer.indicaSousProdSer.sousCateEntite.nomEntite }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <p>
        <a style="text-decoration: none;" href="{{ path('releversousprodser_index') }}" class="fa fa-arrow-circle-left"> Retour vers la liste</a> &nbsp;&nbsp;&nbsp;
        <a style="text-decoration: none;" href="{{ path('releversousprodser_edit', { 'id': releverSousProdSer.id })  }}"> <span class="glyphicon glyphicon-pencil"></span> Modification</a>&nbsp;&nbsp;&nbsp;

        {{ form_start(delete_form) }}
        <input type="submit" value="Delete"  class="btn btn-danger">
        {{ form_end(delete_form) }}
    </p>
{% endblock %}
