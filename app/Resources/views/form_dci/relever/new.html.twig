{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <p>
            <a style="text-decoration: none;" href="{{  path('relever_index') }}"><span class="fa fa-arrow-circle-left"></span> Les relevés d'indicateurs de produit ou service</a>
            | Faire un relevé d'indicateur de produit ou service
        </p>
    </div>
    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Faire un relevé de produit ou service</h3>
            </div>
            <div class="panel-body"> 
                {{ form_start(form) }}
                <div class="form-group">
                    <div class="col-md-5">{{ form_label(form.quantite, "Quantite") }}</div>
                    <div class="col-md-7">
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.quantite) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder':'ex : 50KG'}}) }}
                    </div>          

                </div><br><br>

                <div class="form-group">
                    <div class="col-md-5">{{ form_label(form.dateDuRelever, "Date du relevé") }}</div>
                    <div class="col-md-7">
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.dateDuRelever) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.dateDuRelever, {'attr': {'class': 'form-control, periodicite', 'placeholder':'Clic pour choisir une date'}}) }}
                    </div>
                </div><br><br>
                <input type="submit" value="Valider" class="btn btn-primary btn-group-justified" />
                {{ form_end(form) }}
                <br>

                <a style="text-decoration: none;" href="{{  path('relever_index') }}"><span class="fa fa-arrow-circle-left"></span> Retour ver la liste</a>

            </div>

        </div>
    </div>
    <br><br><br><br><br><br><br><br><br><br>
{% endblock %}

