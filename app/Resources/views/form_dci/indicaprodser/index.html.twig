{% extends "::layout/layout.html.twig" %}

{% block body %}
     <div class="row">
        <p>
            <a style="text-decoration: none;" href="{{  path('indicaprodser_index') }}"><span class="fa fa-arrow-circle-left"></span> Indicateur lié aux produit ou service</a>
        </p>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2 class="titrePage panel-title">La liste des indicateurs des produits/services</h2>
        </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Produit/Service</th>
                <th>Indicateur</th>
                <th>Date Indica.</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for indicaProdSer in indicaProdSers %}
            <tr>
                <td>{{ indicaProdSer.id }}</td>
                <td>{{ indicaProdSer.categorieEntite.nomEntite }}</td>
                <td>{{ indicaProdSer.indicateur.libelle }}</td>
                <td>{{ indicaProdSer.indicateur.dateIndi }}</td>
                <td>
                    
                            <a style="text-decoration: none; color: #003eff" href="{{ path('indicaprodser_show', { 'id': indicaProdSer.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Afficher</a>
                            <span>&nbsp;&nbsp;</span> 
                            <a style="text-decoration: none; color: #003eff" href="{{ path('indicaprodser_edit', { 'id': indicaProdSer.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Modification</a>
                            <span>&nbsp;&nbsp;</span>
                            <a style="text-decoration: none; color: #003eff" href="{{ path('relever_new', { 'id': indicaProdSer.id })  }}"> <span class="glyphicon glyphicon-list"></span> Faire un relevé</a>&nbsp;&nbsp;&nbsp;
                        
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     
            </div>
         <P>
            <a style="text-decoration: none; color: #003eff" href="{{ path('indicaprodser_new') }}"><span class="glyphicon glyphicon-plus"></span> Affecter un indicateur a un produit ou service</a>
            <span>&nbsp;&nbsp;</span>
            <a style="text-decoration: none; color: #003eff" href="{{ path('relever_index') }}"><span class="glyphicon glyphicon-eye-open"></span> La liste des relevées de produit ou service</a>
        </P>

        <div style="text-align: center"> 
                <ul class="pagination">
                    {% for p in range(1, nbrTotalPages) %}
                        <li{% if p == page %} class="active"{% endif %}>
                            <a href="{{ path('indicaprodser_index', {'page': p}) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                </ul>
                
            </div>
{% endblock %}
