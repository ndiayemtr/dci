{% extends "::layout/layout.html.twig" %}

{% block body %}
     <div class="row">
        <p>
            <a style="text-decoration: none;" href="{{  path('marchandise_index') }}"><span class="fa fa-arrow-circle-left"></span> Toutes les Marchandises </a>
        </p>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Liste des Marchandises</h3>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Reference</th>
                    <th>Stade</th>
                    <th>Libelle</th>
                    <th>Origine</th>
                    <th>Protége</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for marchandise in marchandises %}
                    <tr>
                        <td><a href="{{ path('marchandise_show', { 'id': marchandise.id }) }}">{{ marchandise.id }}</a></td>
                        <td>{{ marchandise.reference }}</td>
                        <td>{{ marchandise.stade }}</td>
                        <td>{{ marchandise.libelle }}</td>
                        <td>{{ marchandise.origine }}</td>
                        <td>{{ marchandise.typeMarchandise }}</td>
                        <td>
                            <a style="text-decoration: none; color: #003eff" href="{{ path('marchandise_show', { 'id': marchandise.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Afficher</a>
                            <span>&nbsp;&nbsp;</span> 
                            <a style="text-decoration: none; color: #003eff" href="{{ path('marchandise_edit', { 'id': marchandise.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Modification</a>                       
                            <span>&nbsp;&nbsp;</span> 
                            <a style="text-decoration: none; color: #003eff" href="{{ path('indicamarcha_new') }}"><span class="glyphicon glyphicon-plus"></span> Affecter un indicateur à une marchandise</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <P>
        <a style="text-decoration: none; color: #003eff" href="{{ path('marchandise_new') }}"><span class="glyphicon glyphicon-plus"></span> Nouvelle marchandise</a>
        <span>&nbsp;&nbsp;</span> 
                <a style="text-decoration: none; color: #003eff" href="{{ path('indicamarcha_index') }}"><span class="glyphicon glyphicon-eye-open"></span> Vers la liste des Indicateurs de marchandise</a>
    </P>
    
        
            <div style="text-align: center"> 
        <ul class="pagination">
            {% for p in range(1, nbrTotalPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('marchandise_index', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}
