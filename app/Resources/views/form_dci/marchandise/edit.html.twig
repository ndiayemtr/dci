{% extends "::layout/layout.html.twig" %}

{% block body %}
      <div class="row">
        <p>
            <a style="text-decoration: none;" href="{{  path('marchandise_index') }}"><span class="fa fa-arrow-circle-left"></span> Toutes les Marchandises </a>
            | Modifier une marchandise
        </p>
    </div>
    <div class=" col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Modification d'une marchandise</h3>
            </div>
            <div class="panel-body">
                {{ form_start(edit_form) }}
                <div class="row">
                    <div class="col-md-5">   
                        {#<h4 style="color: #0000F0">Ajouter une nouvelle entité</h4>#}
                        <div class="form-group">
                            <div class="col-md-5">{{ form_label(edit_form.reference, "Réference") }}</div>
                            <div class="col-md-7">
                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(edit_form.reference) }}
                                {# Génération de l'input. #}
                                {{ form_widget(edit_form.reference, {'attr': {'class': 'form-control', 'placeholder':'UY/654'}}) }}
                            </div>          

                        </div><br><br>
                        <div class="form-group">
                            <div class="col-md-5">{{ form_label(edit_form.stade, "Stade") }}</div>
                            <div class="col-md-7">
                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(edit_form.stade) }}
                                {# Génération de l'input. #}
                                {{ form_widget(edit_form.stade, {'attr': {'class': 'form-control', 'placeholder':'stade'}}) }}
                            </div>
                        </div><br><br>
                        <div class="form-group">
                            <div class="col-md-5">{{ form_label(edit_form.origine, "Origine") }}</div>
                            <div class="col-md-7">
                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(edit_form.origine) }}
                                {# Génération de l'input. #}
                                {{ form_widget(edit_form.origine, {'attr': {'class': 'form-control', 'placeholder':'origine'}}) }}
                            </div>
                        </div><br><br>
                        <div class="form-group">
                            <div class="col-md-5">{{ form_label(edit_form.departement) }}</div>
                            <div class="col-md-7">
                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(edit_form.departement) }}
                                {# Génération de l'input. #}
                                {{ form_widget(edit_form.departement, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div><br><br>

                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <div class="col-md-5"> {{ form_label(edit_form.dateMarchandise, "Date") }}</div>
                            <div class="col-md-7">
                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(edit_form.dateMarchandise) }}
                                {# Génération de l'input. #}
                                {{ form_widget(edit_form.dateMarchandise, {'attr': {'class': 'periodicite', 'placeholder':'clic pour choisir une date'}}) }}
                            </div>
                        </div><br><br>
                        <div class="form-group">
                            <div class="col-md-5">{{ form_label(edit_form.libelle, "Libelle") }}</div>
                            <div class="col-md-7">            
                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(edit_form.libelle) }}
                                {# Génération de l'input. #}
                                {{ form_widget(edit_form.libelle, {'attr': {'class': 'form-control', 'placeholder':'Nom de la marchandise'}}) }}
                            </div>
                        </div><br><br>
                        <div class="form-group">
                            <div class="col-md-5">{{ form_label(edit_form.typeMarchandise, "Type de la marchandise") }}</div>
                            <div class="col-md-7">            
                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(edit_form.typeMarchandise) }}
                                {# Génération de l'input. #}
                                {{ form_widget(edit_form.typeMarchandise, {'attr': {'class': 'form-control', 'placeholder':'Type de marchandise'}}) }}
                            </div>
                        </div><br><br>
                        <div class="form-group">
                            <div class="col-md-5">{{ form_label(edit_form.sousCategorieEntite, "Produit lié") }}</div>
                            <div class="col-md-7">            
                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(edit_form.sousCategorieEntite) }}
                                {# Génération de l'input. #}
                                {{ form_widget(edit_form.sousCategorieEntite, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div><br><br>

                    </div>
                </div>
                <br><br>
                <input type="submit" value="Enregistrer" class="btn btn-primary btn-group-justified" />
                {{ form_end(edit_form) }}
                <br>

                <a style="text-decoration: none;" href="{{  path('marchandise_index') }}"><span class="fa fa-arrow-circle-left"></span> Retour ver la liste</a>
                <br><br>{{ form_start(delete_form) }}
                <input type="submit" value="Delete"  class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>

        </div>
    </div>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}



