<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>

    <div class="box-body">
        <div class="row">
            <div class="col-md-offset-4 col-md-5">
                <h4 style="color: #0000F0">Ajouter une nouvelle Attribut d'entite</h4><br>
                <div class="form-group">
                    <div class="col-md-5">{{ form_label(form.libelle, "Libelle") }}</div>
                    <div class="col-md-7">
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.libelle) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control', 'placeholder':'libelle'}}) }}
                    </div>          
            </div><br><br>
                <div class="form-group">
                    <div class="col-md-5">{{ form_label(form.addAttributEntite, "Attribut Entite") }}</div>
                    <div class="col-md-7">
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.addAttributEntite) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.addAttributEntite, {'attr': {'class': 'form-control', 'placeholder':'Attribut Entite'}}) }}
                    </div>          
            </div>

        </div>
    </div>

</div><!-- box box-primary-->