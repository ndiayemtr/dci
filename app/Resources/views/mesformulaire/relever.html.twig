<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>

    <div class="box-body">
        <div class="row">
            <div class="col-md-offset-4 col-md-5">
                <h4 style="color: #0000F0" class="titrePage">Relevé des indicateurs du CI</h4><br>
                <div class="form-group">
                    <div class="col-md-5">{{ form_label(form.dateDuRelever, "Date du relevé") }}</div>
                    <div class="col-md-7" id="dateDuRelever">
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.dateDuRelever) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.dateDuRelever, {'attr': {'class': 'form-control dateDuRelever', 'placeholder':'clic pour choisir une date'}}) }}
                    </div>          
            </div><br><br>
                <div class="form-group">
                    <div class="col-md-5">{{ form_label(form.quantite, "Quantité") }}</div>
                    <div class="col-md-7">
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.quantite) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder':'exemple:100 KG'}}) }}
                    </div>          
            </div>

        </div>
    </div>

</div><!-- box box-primary-->