{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="row">
        
        <div class="col-md-offset-4 col-md-4">
            <div class="panel panel-primary">
                  {% if error %}

                            <div class="alert alert-error">
                                <a class="close" data-dismiss="alert" href="#">×</a>
